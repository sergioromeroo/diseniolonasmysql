<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head')  %> 
<body class="cajalogin">
    <%- include('./partials/header')  %> 
    
    <main class="container">
            <div class="login">
                <h2>INICIAR SESION</h2>
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    
                                    <form action="" method="POST">
                                        <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Email</label>
                                        <input type="email" placeholder="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                                        </div>
                                        <div class="mb-3">
                                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" name="contrasenia" placeholder="contraseña">
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <div class="mb-3 form-check">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar">
                                                <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                                            </div>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                        <span class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null%> </span>
                                    </form>
                                </div>
                            
                            </div>
                        </div>
                    </div>
                

            
            </div>
     </main>
    
    <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %> 

</body>
</html>